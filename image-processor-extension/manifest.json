{
  "manifest_version": 3,
  "name": "图像处理工具箱",
  "version": "1.0.0",
  "description": "专业的本地图像处理解决方案，支持图像压缩和SVG转图片功能",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "图像处理工具箱",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "images/*",
        "*.js",
        "*.css",
        "*.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}